{% extends "base.njk" %}

{% block content %}
  {% if toc.items.length %}
    <OL class="toc">
      {% for item in toc.items %}
        <LI data-level="{{ item.level }}">
          <A HREF="#{{ item.anchor }}">{{ item.text }}</A>
        </LI>
      {% endfor %}
    </OL>
  {% endif %}

  {%- if title -%}
    <H1>{{ title }}</H1>
  {%- endif -%}
  {{ contents | safe }}

  <HR>

  {% if previous %}
    <P>
      Post anterior:
      <A HREF="/{{ previous.permalink }}">{{ previous.title }}</A>
    </P>
  {% endif %}

  {% if next %}
    <P>
      Pr√≥ximo post:
      <a HREF="/{{ next.permalink }}">{{ next.title }}</A>
    </P>
  {% endif %}
{% endblock %}
