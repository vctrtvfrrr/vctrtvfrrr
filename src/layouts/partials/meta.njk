{%- set pageTitle = sitename -%}

{%- if collections[collection].metadata.title -%}
  {%- set pageTitle = collections[collection].metadata.title + ' | ' + pageTitle -%}
{%- endif -%}

{%- if title -%}
  {%- set pageTitle = title + ' | ' + pageTitle -%}
{%- endif -%}

{%- if description -%}
  {%- set pageDescription = description -%}
{%- else -%}
  {%- set pageDescription = author -%}
{%- endif -%}

